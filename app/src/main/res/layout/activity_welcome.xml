<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:weightSum="2"
              android:layout_height="match_parent">


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_weight="1.4"
                    android:background="@color/window_backgound"
                    android:orientation="vertical"
                    android:layout_height="0dp">
        <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_above="@+id/linear_slider_dots"
                android:layout_height="match_parent"/>
        <LinearLayout
                android:id="@+id/linear_slider_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"/>
    </RelativeLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_weight=".6"
                  android:background="@color/bootom_window_background"
                  android:orientation="vertical"
                  android:layout_height="0dp">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_margin="@dimen/_10sdp"
                      android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:text="@string/app_text"
            />

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/square"
                    android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/text_colour_button"
                        android:id="@+id/tv_partner"
                        android:textAllCaps="true"
                        android:layout_centerInParent="true"
                        android:padding="@dimen/_8sdp"
                        android:text="@string/partner_with_us"
                />
            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>