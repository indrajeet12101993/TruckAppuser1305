<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/top_background"
        android:weightSum="2"
        android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:layout_height="0dp">
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:layout_margin="@dimen/_28sdp"
                      android:layout_height="wrap_content">

            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="horizontal"
                          android:layout_gravity="center"
                          android:layout_height="wrap_content">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_24sdp"
                        android:textColor="@color/yellow"
                        android:textStyle="bold"
                        android:text="@string/truck"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_24sdp"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:text="@string/in_transit"
                />
            </LinearLayout>

            <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/intro2"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:contentDescription="@null"
                    android:adjustViewBounds="true"
                    android:id="@+id/iv_auto_slide"/>


        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_weight="1"
                  android:orientation="vertical"
                  android:background="@color/bottom_background"
                  android:focusableInTouchMode="true"
                  android:layout_height="0dp">
        <FrameLayout
                android:id="@+id/place_holder_for_fragment"
                android:layout_width="match_parent"
                android:layout_marginBottom="@dimen/_15sdp"
                android:layout_height="match_parent">

        </FrameLayout>

    </LinearLayout>

</LinearLayout>